---
const posts = await Astro.glob('./architecture/*.mdx')
---

<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>Blog</title>
  </head>
  <body>
    <main>
      <h1>Hello, Astro!</h1>
      <ul>
        {
          posts.map((post) => (
            <li>
              <a href={post.url}>{post.frontmatter.title}</a>
            </li>
          ))
        }
      </ul>
    </main>
  </body>
</html>
